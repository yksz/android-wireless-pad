<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.android.wirelesspad.ui.WiFiSettingsActivity">

    <EditText
        android:id="@+id/wifiSettings_host_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/wifiSettings_host_editText_hint" />

    <Button
        android:id="@+id/wifiSettings_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifiSettings_connect_button"
        android:onClick="onClickConnectButton" />

</LinearLayout>
